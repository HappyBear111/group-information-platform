<%= form_for @participation, :html => { :class => "form-horizontal participation" } do |f| %>

  <% if @participation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@participation.errors.count, "error") %> prohibited this participation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @participation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :activity_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :activity_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:activity_id) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                participations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
